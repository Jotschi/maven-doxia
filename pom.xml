<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>doxia</groupId>
  <artifactId>doxia-core</artifactId>
  <version>1.0-alpha-3-SNAPSHOT</version>
  <name>Doxia Core</name>
  <issueManagement>
    <system>jira</system>
    <url>http://jira.codehaus.org/browse/DOXIA</url>
  </issueManagement>
  <ciManagement>
    <system>continuum</system>
    <notifiers>
      <notifier>
        <address>dev@doxia.codehaus.org</address>
      </notifier>
    </notifiers>
  </ciManagement>
  <dependencies>
    <dependency>
      <groupId>oro</groupId>
      <artifactId>oro</artifactId>
      <version>2.0.7</version>
    </dependency>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus-utils</artifactId>
      <version>1.0.0</version>
    </dependency>
    <dependency>
      <groupId>plexus</groupId>
      <artifactId>plexus-container-default</artifactId>
      <version>1.0-alpha-3</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <scm>
    <connection>scm:svn://svn.codehaus.org/home/projects/doxia/scm/doxia-core/trunk</connection>
    <developerConnection>scm:svn+ssh://${maven.username}@svn.codehaus.org/home/projects/doxia/scm/doxia-core/trunk</developerConnection>
    <url>http://svn.doxia.codehaus.org/</url>
  </scm>
  <build>
    <plugins>
      <!-- TODO: update once we ascertain the correct version to use, and make any necessary CDC updates -->
      <plugin>
        <groupId>plexus</groupId>
        <artifactId>plexus-maven-plugin</artifactId>
        <version>1.0-alpha-1-20050513.055437-1</version>
        <goals>
          <goal>
            <id>descriptor</id>
          </goal>
        </goals>
      </plugin>
    </plugins>
  </build>
  <distributionManagement>
    <site>
      <id>website</id>
      <url>scp://beaver.codehaus.org/home/projects/doxia/public_html</url>
    </site>
    <repository>
      <id>repo1</id>
      <name>Maven Central Repository</name>
      <url>scp://repo1.maven.org/home/projects/maven/repository-staging/to-ibiblio/maven2</url>
    </repository>
  </distributionManagement>
</project>

